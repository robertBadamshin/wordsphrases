<?xml version="1.0" encoding="utf-8"?>
<com.app.wordsphrases.add_word_impl.presentation.add_word_screen.view.TranslationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/edit_text_translation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTint="?colorSecondary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/add_word_translation"
        android:inputType="text"
        android:maxLength="40"
        android:maxLines="1"
        android:textAppearance="@style/TextStyle.Regular.Primary.16dp"
        android:textColorHint="?colorSecondary" />

    <ImageView
        android:id="@+id/image_view_remove_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:contentDescription="@null"
        android:foreground="?selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_cross"
        app:tint="?tertiary" />

</com.app.wordsphrases.add_word_impl.presentation.add_word_screen.view.TranslationView>
