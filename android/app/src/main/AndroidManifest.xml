<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.wordsphrases">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WordsPhrasesApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordsPhrasesLight"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

<!--                <data-->
<!--                    android:host="wordsphrasesapp.page.link"-->
<!--                    android:pathPrefix="/"-->
<!--                    android:scheme="https" />-->
            </intent-filter>
        </activity>

        <activity
            android:name="com.app.wordsphrases.popup_translator_impl.presentation.PopupTranslatorActivity"
            android:exported="true"
            android:theme="@style/PopupTranslator">
            <intent-filter>
                <action android:name="android.intent.action.PROCESS_TEXT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>